{
    "manifest_version": 3,
    "name": "TheTool - All-in-One Productivity Tools",
    "version": "1.0.0",
    "description": "Quick access calculator, stopwatch, timer, pomodoro, calendar and notes utility",
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "tabs",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}